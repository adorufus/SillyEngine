{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-fcolor-diagnostics",
        "-Wall",
        "-fansi-escape-codes",
        "-g",
        "-I${workspaceFolder}/includes",
        "-L${workspaceFolder}/libraries",
        "${workspaceFolder}/core/*.cpp",
        "${workspaceFolder}/*.cpp",
        "${workspaceFolder}/glad.c",
        "${workspaceFolder}/libraries/libglfw.3.3.dylib",
        // "${file}",
        "-o",
        "${workspaceFolder}/app",
        "-framework",
        "OpenGL",
        "-framework",
        "Cocoa",
        "-framework",
        "IOKit",
        "-framework",
        "CoreVideo",
        "-framework",
        "CoreFoundation",
        "-Wno-deprecated"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/clang++"
    }
  ]
}
